@{
    ViewData["Title"] = "Employee Page";
}

<div class="container">
    <div class="row">
        <div class="col-lg-5 col-md-6 col-sm-6 col-xm-12">
            <!--Add Form-->
            <form action="javascript:void(0);" method="POST" onsubmit="addItem()">
                <div class=row>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xm-12">
                        <input class="form-control" style="width:200px;" type="text" placeholder="Employee Name" id="add-name">
                        <label for="BirthDate" style="font-family:Roboto;">BirthDate</label>
                        <input name="BirthDate" class="form-control" style="width:200px;" type="date" id="add-birthData">
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xm-12">
                        <input class="form-control" style="width:200px;" type="text" placeholder="Employee Title" id="add-Title">
                        <label for="HiringData" style="font-family:Roboto;">HiringData</label>
                        <input name="HiringData" class="form-control" style="width:200px;" type="date" id="add-HiringData">
                    </div>

                    <div class="col-lg-1 col-md-6 col-sm-6 col-xm-12">
                        <select name="Department" id="add-DepartmentId" style="margin-top:5px;">
                            <option value="1" style="font-family:Roboto;">HR</option>
                            <option value="4" style="font-family:Roboto;">Head Office</option>
                            <option value="14" style="font-family:Roboto;">Operations</option>
                            <option value="3" style="font-family:Roboto;">Sales</option>
                            <option value="12" style="font-family:Roboto;">ADV</option>
                            <option value="7" style="font-family:Roboto;">Data Analysis</option>
                            <option value="8" style="font-family:Roboto;">Database Administrator</option>
                            <option value="9" style="font-family:Roboto;">Services</option>
                        </select>
                    </div>
                </div>
                <input type="submit" class="btn btn-primary" style="margin-top:10px;" value="Add">
            </form>
            <!--Add Form-->

            <!--Edit Form-->
            <div id="editForm">
                <h3> </h3>
                <form action="javascript:void(0);" onsubmit="updateItem()">
                    <div class=row>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xm-12">
                            <input type="hidden" id="edit-identifier">
                            <input class="form-control" style="width:200px; margin-top:23px;" placeholder="Employee Name" type="text" id="edit-name">
                            <label for="BirthDate" style="font-family:Roboto; margin-top:15px;">BirthDate</label>
                            <input name="BirthDate" class="form-control" style="width:200px;" placeholder="Click on Edit" type="date" id="edit-birthData">
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xm-12">
                            <label for="HiringData" style="font-family:Roboto; margin-top:5px;">HiringData</label>
                            <input name="HiringData" class="form-control" style="width:200px;" type="date" id="edit-HiringData">
                            <input class="form-control" style="width:200px;" placeholder="Employee Title" type="text" id="edit-Title">
                        </div>

                        <div class="col-lg-1 col-md-6 col-sm-6 col-xm-12">
                            <select name="Department" id="edit-DepartmentId" style="margin-top:5px;">
                                <option value="1" style="font-family:Roboto;">HR</option>
                                <option value="4" style="font-family:Roboto;">Head Office</option>
                                <option value="14" style="font-family:Roboto;">Operations</option>
                                <option value="3" style="font-family:Roboto;">Sales</option>
                                <option value="12" style="font-family:Roboto;">ADV</option>
                                <option value="7" style="font-family:Roboto;">Data Analysis</option>
                                <option value="8" style="font-family:Roboto;">Database Administrator</option>
                                <option value="9" style="font-family:Roboto;">Services</option>
                            </select>
                        </div>
                    </div>
                    <input type="submit" style="margin-top:10px;" class="btn btn-primary" value="Update">
                    <a onclick="closeInput()" aria-label="Close">&#10060;</a>
                </form>
            </div>
            <!--Edit Form-->

        </div>

        <div class="col-lg-7 col-md-6 col-sm-6 col-xm-12">
            <table class="table table-hover">
                <thead>
                    <tr style="font-family:Roboto;">
                        <th>Name</th>
                        <th>BirthDate</th>
                        <th>Title</th>
                        <th>HiringDate</th>
                        <th>Department</th>
                        <th id="actions"> Actions</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="Emps"></tbody>
            </table>
            <p id="counter" style="font-family:Roboto; float:right;"></p>
        </div>
    </div>
</div>
<script src="/js/Employee.js" asp-append-version="true"></script>
<script type="text/javascript">getItems();</script>


